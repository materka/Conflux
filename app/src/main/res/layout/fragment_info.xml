<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="station"
            type="se.materka.conflux.db.model.Station" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:labelFor="@id/text_name"
                android:text="Name"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/text_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{station.name}"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:labelFor="@id/text_name"
                android:text="URL"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/text_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{station.url}"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:labelFor="@id/text_name"
                android:text="Format"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/text_format"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{station.format}"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:labelFor="@id/text_name"
                android:text="Bitrate"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/text_bitrate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{station.bitrate.toString()}"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:labelFor="@id/text_name"
                android:text="Genre"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/text_genre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{station.genre}"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:labelFor="@id/text_name"
                android:text="Channels"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/text_channels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{station.channels.toString()}"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
</layout>